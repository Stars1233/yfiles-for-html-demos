{
  "compilerOptions": {
    "lib": ["ES2024", "dom", "dom.iterable"],
    "module": "ES2022",
    "target": "ES2024",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"]
}
